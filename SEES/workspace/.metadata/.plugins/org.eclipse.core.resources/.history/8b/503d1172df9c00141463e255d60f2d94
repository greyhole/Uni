#include "systemc.h"
#include "Producer.h"
#include "Consumer.h"

int sc_main(int argc, char* argv[])
{
	// generating the sc_signal
	sc_signal<int> data_sig;
	sc_signal< sc_bv<1> > test_sig0;
	sc_signal< sc_bv<1> > test_sig1;
	sc_signal< sc_bv<1> > test_sig2;
	sc_signal< sc_bv<1> > test_sig3;
		// generating the modules
	Producer prod1("Producer1");
	Consumer cons1("Consumer1",6);


	// connecting modules via signals
	prod1.data(data_sig);
	prod1.test_out(test_sig1);
	cons1.data(data_sig);
	cons1.upList[0](test_sig0);
	cons1.upList[1](test_sig1);
	cons1.upList[2](test_sig2);
	cons1.upList[3](test_sig3);
	// Run the simulation till sc_stop is encountered
	sc_start();

	return 0;
}

