#include "implementation.oil"

CPU ATMEL_AT91SAM7S256
{
  OS LEJOS_OSEK
  {
    STATUS = EXTENDED;
    STARTUPHOOK = FALSE;
    ERRORHOOK = FALSE;
    SHUTDOWNHOOK = FALSE;
    PRETASKHOOK = FALSE;
    POSTTASKHOOK = FALSE;
    USEGETSERVICEID = FALSE;
    USEPARAMETERACCESS = FALSE;
    USERESSCHEDULER = FALSE;
  };


  /* Definition of application mode */
  APPMODE appmode1{};
 
 RESOURCE MotorResource{
    RESOURCEPROPERTY = STANDARD;
 };

 EVENT PackageReceivedEvent
 {
   MASK = AUTO;
 };
 EVENT MotorStopped{
    MASK = AUTO;
  };
 EVENT MoveReadyEvent{
    MASK = AUTO;
  };
 EVENT LightRightDown{
    MASK = AUTO;
  };
 EVENT LightLeftDown{
    MASK = AUTO;
  };
 EVENT LightBothDown{
    MASK = AUTO;
  };
 EVENT LightBothUp{
    MASK = AUTO;
  };
 EVENT RotateL{
    MASK = AUTO;
  };
 EVENT RotateR{
    MASK = AUTO;
  };
 EVENT MoveF{
    MASK = AUTO;
  };
 EVENT Adjust{
    MASK = AUTO;
  };
  
  TASK MainTask
  {
    AUTOSTART = TRUE
    {
      APPMODE = appmode1;
    };
    PRIORITY = 3;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512; /* Stack size */
    EVENT = MoveReadyEvent;
  };

  TASK MotorikTask
  {
    AUTOSTART = TRUE
    {
      APPMODE = appmode1;
    };
    PRIORITY = 2;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512; /* Stack size */
    RESOURCE = MotorResource;
    EVENT = Adjust;
    EVENT = MoveF;
    EVENT = RotateL;
    EVENT = RotateR;
    EVENT = LightLeftDown;
    EVENT = LightRightDown;
    EVENT = LightBothDown;
    EVENT = LightBothUp;
    EVENT = MotorStopped;
  };
  
  TASK LightTask
  {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512; /* Stack size */
  };

  TASK MotorTask
  {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512; /* Stack size */
    RESOURCE = MotorResource;
  };

  TASK UpdateStatus
  {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512;
  };
    
  TASK FetchBtPackage
  {
    AUTOSTART = FALSE;
    PRIORITY = 1;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512;
  };
  
  TASK DecodeBtPackage
   {
    AUTOSTART = TRUE
    {
      APPMODE = appmode1;
    };
    PRIORITY = 2;
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 512;
    EVENT = PackageReceivedEvent;
   };
  /* Definition of OSEK Alarm Counter */
  
  COUNTER SysTimerCnt
  {
    MINCYCLE = 1;
    MAXALLOWEDVALUE = 10000;
    TICKSPERBASE = 1; /* One tick is equal to 1msec */
  };
  
  ALARM light_alarm
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
      TASK = LightTask;
    };
    AUTOSTART = TRUE
    {
      ALARMTIME = 1;
      CYCLETIME = 10; /* Task1 is executed every 10msec */
          APPMODE = appmode1;
    };
  };
  ALARM motor_alarm
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
      TASK = MotorTask;
    };
    AUTOSTART = TRUE
    {
      ALARMTIME = 1;
      CYCLETIME = 20; /* Task1 is executed every 10msec */
          APPMODE = appmode1;
    };
  };
  
  ALARM cyclic_alarm1
  {
    COUNTER = BtTimer;
    ACTION = ACTIVATETASK
    {
      TASK = FetchBtPackage;
    };
    AUTOSTART = TRUE
    {
      ALARMTIME = 1;
      CYCLETIME = 50;
      APPMODE = appmode1;
    };
  };
  
  ALARM cyclic_alarm2
  {
    COUNTER = BtTimer;
    ACTION = ACTIVATETASK
    {
      TASK = UpdateStatus;
    };
    AUTOSTART = TRUE
    {
      ALARMTIME = 1;
      CYCLETIME = 1000;
      APPMODE = appmode1;
    };
  };
};
